<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
<name>Jshopping Ajax Cart Pro.</name>
    <creationDate>2.6.2017</creationDate>
    <author>MatBlunic</author>
    <authorEmail>matblunic@gmail.com</authorEmail>
    <authorUrl>http://matblunic.com</authorUrl>
    <copyright></copyright>
    <version>1.0.1</version>
    <description>Display JoomShopping Ajax cart</description>
    <files>
        <filename module="mod_jshopping_cart_ajax_pro">mod_jshopping_cart_ajax_pro.php</filename>
        <filename>tmpl/default.php</filename>
		<folder>css/</folder>
        <folder>fonts/</folder>
        <folder>images/</folder>
        <folder>js/</folder>
    </files>
    <languages>
        <language
            tag="en-GB">en-GB.mod_jshopping_cart_ajax_pro.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">  
               <field
                    name="display_cont"
                    type="list"
                    default="1"
                    label="SHOW_COUNT_OF_PRODUCT"
                    description="SHOW_COUNT_OF_PRODUCT_DESC">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
				<field
                    name="position"
                    type="list"
                    default="0"
                    label="CART_ICON_POSITION"
                    description="CART_POSITION">
                    <option
                        value="0">POS_RIGHT</option>
                    <option
                        value="1">POS_LEFT</option>
                </field>
				<field
                    name="cart_style"
                    type="list"
                    default="0"
                    label="CART_STYLE"
                    description="CART_STYLE_COLOR">
                    <option
                        value="0">CART_WHITE</option>
                    <option
                        value="1">CART_BLACK</option>
                </field>
				<field
                    name="cart_style_box"
                    type="list"
                    default="0"
                    label="CART_STYLE_BOX"
                    description="CART_STYLE_BOX_DESC">
                    <option
                        value="0">CART_DARK</option>
                    <option
                        value="1">CART_LIGHT</option>
                </field>
				<field
                    name="cart_button"
                    type="list"
                    default="1"
                    label="CART_BUTTON"
                    description="CART_BUTTON_DESC">
                    <option
                        value="0">CART_BUTTON_DEFAULT</option>
                    <option
                        value="1">CART_BUTTON_PRIMARY</option>
					<option
                        value="2">CART_BUTTON_SUCCESS</option>
					<option
                        value="3">CART_BUTTON_WARNING</option>
					<option
                        value="4">CART_BUTTON_DANGER</option>
					<option
                        value="5">CART_BUTTON_DARK</option>
					<option
                        value="6">CART_BUTTON_LIGHT</option>
                </field>
				<field
                    name="load_jquery"
                    type="radio"
                    default="1"
                    label="CART_JQUERY"
                    description="CART_JQUERY_DESC">
                    <option
                        value="0">On</option>
                    <option
                        value="1">Off</option>
                </field>
				<field
                    name="pop_up"
                    type="radio"
                    default="0"
                    label="CART_POPUP"
                    description="CART_POPUP_DESC">
                    <option
                        value="0">On</option>
                    <option
                        value="1">Off</option>
                </field>
				<field
					name="currency"
                    type="text"
                    label="CURRENCY"
                    description="CART_CURR_DESC">
				</field>
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="MODULE_POS"
                    description="MODULE_POS_DESC" />                               
            </fieldset> 
        </fields>
    </config>          
</extension>